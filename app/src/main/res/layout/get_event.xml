<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Getevent"
    android:background="@drawable/skywhiteback"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="지역 : "
            android:textSize="20sp"

            android:fontFamily="@font/giants"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_DoList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="선택 : "
            android:textSize="20sp"

            android:fontFamily="@font/giants"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_SiList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

        <Button
            android:id="@+id/button_local_select"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:text="지역 설정"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:background="@drawable/get_event_button"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="개수 : "
            android:textSize="18sp"
            android:fontFamily="@font/giants"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_MonthList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="선택 : "
            android:textSize="18sp"
            android:fontFamily="@font/giants"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_GunnameList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="종류 : "
            android:textSize="18sp"
            android:fontFamily="@font/giants"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_CodenameList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="비용 : "
            android:textSize="18sp"
            android:fontFamily="@font/giants" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_FreeList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupBackground="#DCEBFF" />

    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textview_Data_result"
                android:layout_width="match_parent"
                android:layout_height="296dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview"
                android:paddingLeft="0dp"
                android:text="" />

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <Button
            android:id="@+id/button_loading_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/get_event_button"
            android:fontFamily="@font/giants"
            android:text="행사 일정 불러오기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/push_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/push_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:text="알람"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_add_event"
            app:layout_constraintStart_toEndOf="@id/button_loading_event"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_add_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/get_event_button"
            android:fontFamily="@font/giants"
            android:text="행사 일정 추가하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/push_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>